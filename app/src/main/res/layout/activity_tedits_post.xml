<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    android:background="@color/lighter_teal"
    tools:openDrawer="start"
    tools:context=".teditsPost">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_blue"
        tools:context=".teditsContent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark_blue"
            app:layout_constraintTop_toTopOf="parent"
            app:titleTextColor="@color/light_blue" />

        <TextView
            android:id="@+id/appName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppinsbold"
            android:gravity="center"
            android:text="T-Post Uploads"
            android:textColor="@color/white"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/contentupload"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/appName"
            android:layout_marginLeft="110dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_image" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/namePost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/contentupload"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:hint="Enter the name of your post">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/namePostText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/contentupload"
                android:backgroundTint="@color/light_teal"
                android:drawableEnd="@drawable/edit_icon"
                android:maxLength="25"
                android:fontFamily="@font/poppinsmedium" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/captionPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/namePost"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:hint="Enter the caption of your post">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/captionPostText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/categoryOne"
                android:backgroundTint="@color/light_teal"
                android:drawableEnd="@drawable/edit_icon"
                android:maxLength="300"
                android:fontFamily="@font/poppinsmedium" />
        </com.google.android.material.textfield.TextInputLayout>
        <ProgressBar
            android:id="@+id/progressBarn"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/captionPost"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"/>

        <Button
            android:id="@+id/btnUpload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/progressBarn"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:backgroundTint="@color/dark_blue"
            android:text="Upload" />

    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navimenu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/navheader"
        app:menu="@menu/navmenu"
        android:layout_gravity="start"/>
</androidx.drawerlayout.widget.DrawerLayout>