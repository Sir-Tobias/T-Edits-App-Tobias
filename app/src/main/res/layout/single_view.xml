<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/single_view"
    android:background="@color/blue">

    <ImageView
        android:id="@+id/image_single_view"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_image" />

    <TextView
        android:id="@+id/contentOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="275dp"
        android:fontFamily="@font/poppinsbold"
        android:gravity="center"
        android:text="Content One"
        android:textColor="@color/white"
        android:textSize="25dp" />
    <TextView
        android:id="@+id/contentTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/contentOne"
        android:fontFamily="@font/poppinsbold"
        android:gravity="center"
        android:text="Content Two"
        android:textColor="@color/white"
        android:textSize="25dp" />
    <TextView
        android:id="@+id/contentThree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/contentTwo"
        android:fontFamily="@font/poppinsbold"
        android:gravity="center"
        android:text="Content Three"
        android:textColor="@color/white"
        android:textSize="25dp" />
    <TextView
        android:id="@+id/contentFour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/contentThree"
        android:fontFamily="@font/poppinsbold"
        android:gravity="center"
        android:text="Content Four"
        android:textColor="@color/white"
        android:textSize="25dp" />

    <ImageView
        android:id="@+id/menupopbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_single_view"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/light_blue"
        android:src="@drawable/ic_add"></ImageView>

</RelativeLayout>