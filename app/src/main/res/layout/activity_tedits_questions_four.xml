<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_teal"
    tools:context=".teditsQuestions">

    <TextView
        android:id="@+id/packageTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsbold"
        android:gravity="center"
        android:text="T-Edits Package Questions"
        android:textColor="@color/dark_blue"
        android:textSize="23dp"
        app:layout_constraintTop_toTopOf="parent" />



    <TextView
        android:id="@+id/questionFour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/packageTitle"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppinsbold"
        android:gravity="left"
        android:text="4. Select a primary colour for your brand"
        android:textColor="@color/dark_blue"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="0dp" />

    <RadioGroup
        android:id="@+id/optionfour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/questionFour"
        android:layout_marginStart="20dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_apparel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:onClick="onRadioButtonClicked"
            android:text="White" />

        <RadioButton
            android:id="@+id/radio_media"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:onClick="onRadioButtonClicked"
            android:text="Yellow" />

        <RadioButton
            android:id="@+id/primaryRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:onClick="onRadioButtonClicked"
            android:text="Red" />

        <RadioButton
            android:id="@+id/primaryBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:onClick="onRadioButtonClicked"
            android:text="Blue" />

        <RadioButton
            android:id="@+id/primaryBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:onClick="onRadioButtonClicked"
            android:text="Black" />
    </RadioGroup>

    <TextView
        android:id="@+id/questionFourone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/optionfour"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppinsbold"
        android:gravity="left"
        android:text="4.1 Select two secondary colors"
        android:textColor="@color/dark_blue"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="0dp" />

    <CheckBox
        android:id="@+id/Orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/questionFourone"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="20dp"
        android:onClick="onCheckboxClicked"
        android:text="Orange" />

    <CheckBox
        android:id="@+id/Green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/questionFourone"
        android:layout_marginStart="13dp"
        android:layout_marginTop="7dp"
        android:layout_toEndOf="@+id/Orange"
        android:onClick="onCheckboxClicked"
        android:text="Green" />

    <CheckBox
        android:id="@+id/Purple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/questionFourone"
        android:layout_marginStart="9dp"
        android:layout_marginTop="7dp"
        android:layout_toEndOf="@+id/Green"
        android:onClick="onCheckboxClicked"
        android:text="Purple" />

    <TextView
        android:id="@+id/questionFourtwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Purple"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppinsbold"
        android:gravity="left"
        android:text="4.3 Select neutral colors"
        android:textColor="@color/dark_blue"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="0dp" />

    <CheckBox
        android:id="@+id/Brown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/questionFourtwo"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="20dp"
        android:onClick="onCheckboxClicked"
        android:text="Brown" />

    <CheckBox
        android:id="@+id/Grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/questionFourtwo"
        android:layout_marginStart="13dp"
        android:layout_marginTop="7dp"
        android:layout_toEndOf="@+id/Orange"
        android:onClick="onCheckboxClicked"
        android:text="Grey" />

    <CheckBox
        android:id="@+id/Beige"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/questionFourtwo"
        android:layout_marginStart="9dp"
        android:layout_marginTop="7dp"
        android:layout_toEndOf="@+id/Green"
        android:onClick="onCheckboxClicked"
        android:text="Beige" />

    <Button
        android:id="@+id/btnUpload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Brown"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:backgroundTint="@color/dark_blue"
        android:text="Submit" />


</RelativeLayout>