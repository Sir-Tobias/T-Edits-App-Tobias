<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    android:background="@color/lighter_teal"
    tools:openDrawer="end"
    tools:context=".PageFour">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_teal"
        tools:context=".teditsQuestions">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark_blue"
            app:layout_constraintTop_toTopOf="parent"
            app:titleTextColor="@color/light_blue" />

        <TextView
            android:id="@+id/packageTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsbold"
            android:gravity="center"
            android:layout_below="@id/toolbar"
            android:text="T-Edits Package Questions"
            android:textColor="@color/dark_blue"
            android:textSize="23dp"
            app:layout_constraintTop_toTopOf="parent" />



        <TextView
            android:id="@+id/questionFour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/packageTitle"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppinsbold"
            android:gravity="left"
            android:text="4. Select a primary colour for your brand"
            android:textColor="@color/dark_blue"
            android:textSize="15dp"
            tools:layout_editor_absoluteX="0dp" />

        <RadioGroup
            android:id="@+id/optionfour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/questionFour"
            android:layout_marginStart="20dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_apparel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:text="White" />

            <RadioButton
                android:id="@+id/radio_media"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Yellow" />

            <RadioButton
                android:id="@+id/primaryRed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Red" />

            <RadioButton
                android:id="@+id/primaryBlue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Blue" />

            <RadioButton
                android:id="@+id/primaryBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Black" />
        </RadioGroup>

        <TextView
            android:id="@+id/questionFourone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/optionfour"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppinsbold"
            android:gravity="left"
            android:text="4.1 Select two secondary colors"
            android:textColor="@color/dark_blue"
            android:textSize="15dp"
            tools:layout_editor_absoluteX="0dp" />

        <CheckBox
            android:id="@+id/Orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/questionFourone"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="20dp"
            android:text="Orange" />

        <CheckBox
            android:id="@+id/Green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/questionFourone"
            android:layout_marginStart="13dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@+id/Orange"
            android:text="Green" />

        <CheckBox
            android:id="@+id/Purple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/questionFourone"
            android:layout_marginStart="9dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@+id/Green"
            android:text="Purple" />

        <TextView
            android:id="@+id/questionFourtwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Purple"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppinsbold"
            android:gravity="left"
            android:text="4.3 Select neutral colors"
            android:textColor="@color/dark_blue"
            android:textSize="15dp"
            tools:layout_editor_absoluteX="0dp" />

        <CheckBox
            android:id="@+id/Brown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/questionFourtwo"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="20dp"
            android:text="Brown" />

        <CheckBox
            android:id="@+id/Grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/questionFourtwo"
            android:layout_marginStart="13dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@+id/Orange"
            android:text="Grey" />

        <CheckBox
            android:id="@+id/Beige"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/questionFourtwo"
            android:layout_marginStart="9dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@+id/Green"
            android:text="Beige" />

        <Button
            android:id="@+id/submitFour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Brown"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="21dp"
            android:layout_marginRight="40dp"
            android:backgroundTint="@color/dark_blue"
            android:text="Submit" />
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navimenu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/navheader"
        app:menu="@menu/navmenu"
        android:layout_gravity="start"/>
</androidx.drawerlayout.widget.DrawerLayout>