<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/dark_blue"
    android:orientation="vertical"
    tools:context=".NavMenu">

    <ImageView
        android:id="@+id/TLogo"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginLeft="13dp"
        android:src="@drawable/teditslogo" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/TLogo"
        android:src="@drawable/ic_profiler" />

    <TextView
        android:id="@+id/userNameMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_image"
        android:layout_marginLeft="13dp"
        android:fontFamily="@font/poppinsbold"
        android:text="User Name"
        android:textColor="@color/cardview_light_background"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/userDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/designerImage"
        android:layout_toRightOf="@+id/customerImage"
        android:paddingBottom="5dp"
        android:text="Type Designer"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/userNameMenu"
        android:textColor="@color/cardview_light_background"
        android:layout_marginBottom="10dp"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/designerImage"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="13dp"
        android:layout_below="@id/userNameMenu"
        android:visibility="visible"
        android:src="@drawable/idea" />

    <ImageView
        android:id="@+id/customerImage"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@id/userNameMenu"
        android:layout_marginLeft="13dp"
        android:src="@drawable/customer"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/adminImage"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@id/userNameMenu"
        android:layout_marginLeft="13dp"
        android:src="@drawable/administrator"
        android:visibility="visible" />

    <TextView
        android:id="@+id/adminDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/adminImage"
        android:paddingBottom="5dp"
        android:text="Type Designer"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/userNameMenu"
        android:textColor="@color/cardview_light_background"
        android:layout_marginBottom="10dp"
        android:textSize="15dp" />
</RelativeLayout>