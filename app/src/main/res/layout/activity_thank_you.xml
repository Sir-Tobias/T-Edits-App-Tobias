<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    android:background="@color/darker_blue"
    tools:openDrawer="start"
    tools:context=".ThankYou">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/darker_blue"
        tools:context=".teditsQuestions">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark_blue"
            app:layout_constraintTop_toTopOf="parent"
            app:titleTextColor="@color/light_blue" />


        <TextView
            android:id="@+id/headingOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_marginTop="180dp"
            android:fontFamily="@font/poppinsbold"
            android:gravity="center"
            android:text="~~ SUCCESS ~~"
            android:textColor="@color/light_blue"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="0dp" />


        <TextView
            android:id="@+id/paragraphTwo"
            android:layout_width="323dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/headingOne"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="29dp"
            android:layout_marginEnd="40dp"
            android:fontFamily="@font/poppinsmedium"
            android:gravity="center"
            android:text="We hope to design for you again in future. Your logo package will be assigned to one of our very own T-Editors."
            android:textColor="@color/light_teal"
            android:textSize="15dp"
            tools:layout_editor_absoluteX="0dp" />

        <ImageView
            android:id="@+id/teditsLogo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/paragraphTwo"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="165dp"
            android:layout_marginTop="66dp"
            android:scaleType="fitXY"
            android:src="@drawable/teditsbluelogo" />

        <Button
            android:id="@+id/thankyou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/teditsLogo"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="134dp"
            android:layout_marginTop="57dp"
            android:onClick="backtoMain"
            android:layout_marginBottom="143dp"
            android:text="BACK TO MAIN" />

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>